<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bindind="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.sagar.qbar.activities.host.results.text.TextFragmentModel" />

        <variable
            name="commonModel"
            type="com.sagar.qbar.activities.host.results.ResultCommonModel" />

        <variable
            name="handler"
            type="com.sagar.qbar.activities.host.results.text.TextFragmentEventHandler" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/lighGrayBackground"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <include
                android:id="@+id/text_header"
                layout="@layout/result_header"
                app:layout_constraintEnd_toEndOf="parent"
                bindind:commonModel="@{commonModel}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="15dp"
                android:text="@{model.text}"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryText"
                android:textSize="20sp"
                ads:layout_constraintBottom_toTopOf="@+id/link_search_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_header" />

            <Button
                android:id="@+id/link_search_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:onClick="@{()-> handler.onClickWebSearch(model)}"
                android:padding="10dp"
                android:text="@string/web_search_text"
                android:theme="@style/MyButton"
                ads:layout_constraintBottom_toTopOf="@+id/link_share_button"
                ads:layout_constraintHorizontal_bias="1.0"
                ads:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/link_share_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:onClick="@{()->handler.onClickShare(model)}"
                android:padding="10dp"
                android:text="@string/share_text"
                android:theme="@style/MyButton"
                ads:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</layout>
