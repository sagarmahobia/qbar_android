<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lighGrayBackground"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sagar.qbar.activities.result.ResultActivity"
    >


    <ImageView
        android:id="@+id/code_type_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/product_type_drawable"
        android:paddingBottom="12dp"
        android:paddingEnd="5dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/code_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="3dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold"
        ads:layout_constraintBottom_toBottomOf="@+id/code_type_icon"
        ads:layout_constraintStart_toEndOf="@+id/code_type_icon"
        ads:layout_constraintTop_toTopOf="@+id/code_type_icon" />

    <TextView
        android:id="@+id/code_scan_timestamp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="3dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp"
        ads:layout_constraintBottom_toBottomOf="@+id/code_type_icon"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toEndOf="@+id/code_type_text"
        ads:layout_constraintTop_toTopOf="@+id/code_type_icon" />


    <FrameLayout
        android:background="#fafafa"
        android:id="@+id/result_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        ads:layout_constraintBottom_toTopOf="@+id/ad_view_result_screen"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toBottomOf="@+id/code_type_icon" />


    <com.google.android.gms.ads.AdView
        android:id="@+id/ad_view_result_screen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:foregroundGravity="bottom"
        android:visibility="gone"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/smart_banner_ad_unit_id_result_bottom"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>
